generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("RENDER_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique @db.VarChar(255)
  password String   @db.VarChar(255)
  account  Account?
}

model Account {
  id        Int    @id @default(autoincrement())
  userId    Int    @unique
  name      String @db.VarChar(255)
  units     Json
  wengines  Json
  inventory Json
  loadouts  Json
  user      User   @relation(fields: [userId], references: [id])
}

model Character {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(255)
  rank      Rank
  role      String @db.VarChar(255)
  attribute Attribute
  weekly    String @db.VarChar(255)
  expert    String @db.VarChar(255)
}

model Wengine {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  rank Rank
  role String @db.VarChar(255)
}

enum Attribute {
  FIRE
  ICE
  ELECTRIC
  ETHER
  PHYSICAL
}

enum Rank {
  S
  A
  B
}
